{
    "tasks": [
        {
            "label": "C/C++: g++.exe 生成活动文件",
            "type": "shell",
            "command": "C:/msys64/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-O2", "-std=c++17",
                "-finput-charset=UTF-8", "-fexec-charset=GBK",
                 "${file}", // 编译当前文件
                // 手动编译所有文件

                // "${workspaceFolder}/Game2048/Game2048.cpp",
                
                "-o", "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-I", "C:/msys64/mingw64/include", // SFML 头文件路径
                "-L", "C:/msys64/mingw64/lib", // SFML 库路径
                "-lsfml-graphics", // 按依赖顺序链接
                "-lsfml-window",
                "-lsfml-system"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}